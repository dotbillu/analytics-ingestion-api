{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "skipLibCheck": true,

    /* Aliases */
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["src/lib/*"]
    },
    
    /* Output */
    "outDir": "./dist",

    /* Strictness */
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules"]
}
